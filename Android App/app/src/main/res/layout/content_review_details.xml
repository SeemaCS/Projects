<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/whitewood"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="project.scu.edu.chew.activities.ReviewDetailsActivity"
    tools:showIn="@layout/activity_review_details">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Name:"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:id="@+id/standardName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textStyle="italic"
        android:textSize="15sp"
        android:id="@+id/rusername"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Rating:"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:id="@+id/standardrating"/>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/foodRatingBarStandard"
        android:clickable="false"
        android:isIndicator="true"
        android:layout_marginLeft="20dp"
        android:id="@+id/rrating"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/rreview"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:background="@drawable/edit_text_border_set"
        android:layout_marginTop="20dp" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:id="@+id/rreviewImage"
        android:layout_marginTop="30dp" />

</LinearLayout>
