<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whitewood"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="project.scu.edu.chew.activities.ReviewActivity"
    tools:showIn="@layout/activity_review">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We appreciate your feedback."
        android:textSize="20sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Now"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:textStyle="italic"/>

    <RatingBar
        android:id="@+id/ratingBar1"
        style="@style/foodRatingBar"
        android:layout_marginLeft="15dp"
        android:duplicateParentState="true"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </RatingBar>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:id="@+id/reviewImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Review"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:inputType="textMultiLine"
        android:hint="Type here..."
        android:textSize="15sp"
        android:ems="10"
        android:id="@+id/editText2"
        android:gravity="top"
        android:layout_marginBottom="25dp"
        android:background="@drawable/edit_text_border_set"
        android:layout_gravity="right" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userName"
        android:layout_marginTop="3dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Save"
        android:id="@+id/saveButton"
        android:background="@color/brown"
        android:textColor="@color/yellow"/>

</LinearLayout>
